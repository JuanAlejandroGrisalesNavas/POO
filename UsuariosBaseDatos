import psycopg2
class usuarios():
    nombre = ""
    apellido = ""
    documento = ""


    def init(self,nombre,apellido,documento):
        self.nombre = nombre
        self.apellido =apellido
        self.documento = documento


    def imprimirNombre(self):
        print("El nombre del usuario es ",self.nombre)

    def crearUsuario(self,conexion,nombre,apellido,documento):
        try:
            with conexion.cursor() as cursor:
                consulta = "INSERT INTO usuarios(nombre,apellido,documento) VALUES (%s,%s,%s)"
                cursor.execute(consulta,(nombre,apellido,documento))
                conexion.commit()
                return True
        except psycopg2.Error as e:
            print("Error ",e)
