import psycopg2

class Basedatos():
    host = "containers-us-west-167.railway.app"
    port = 6160
    user = "postgres"
    password = "xvPiTtoYO2D8mSwTOXdC"
    database = "railway"
    
    def __init__(self,host,user,port,password,database):
        self.host = host
        self.port = port
        self.user = user
        self.password = password
        self.database = database
    print("iniciar ok")
    
def conectar(self):
     try:
        credenciales = {
            "dbname":self.database,
            "user":self.user,
            "password":self.password,
            "host":self.host,
            "port":self.port
            
        }
        
        conexion = psycopg2.connect(**credenciales)
        if conexion:
            print("conexion Exitosa ")

        return conexion
     except psycopg2.Error as e:
            print("Ocurrio un error al conectar a PsotgreSQL: ", e)
    

